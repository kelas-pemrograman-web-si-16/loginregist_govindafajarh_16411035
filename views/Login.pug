    head
        include head.pug
    body
        .page-wrapper.bg-gra-02.p-t-130.p-b-100.font-poppins
            .wrapper.wrapper--w680
                .card.card-4
                    .card-body
                        h2.title Login GIS UBL
                        form(method='POST')
                            .input-group
                                        label.label Email
                                        input.input--style-4(type='email', name='email')

                            .input-group
                                        label.label Password
                                        input.input--style-4(type='password', name='password')
                            .p-t-15
                                a.button.btn.btn--radius-2.btn--blue(href='/Dashboard') Login
